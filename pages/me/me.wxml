<!--pages/me/index.wxml-->
<view class="person-center container">
  <block wx:if="{{isLogin}}">
    <view class="userinfo">
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
  </block>
  <block wx:else>
    <button lang="zh_CN"  open-type="getUserInfo" bindgetuserinfo="bindgetuserinfo" class="login_button" >点击登录</button>
  </block>

  <view class="option ">
    <!-- <view class="weui-panel__hd">菜单</view> -->
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_small-appmsg">
        <view class="option-item weui-cells weui-cells_in-small-appmsg">
          <navigator open-type="switchTab" url="/pages/order/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd weui-cell_primary">
              <view>我的订单</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </navigator>

          <!-- this part is not finish -->
          <!-- <navigator class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd weui-cell_primary">
              <view>我的收藏</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </navigator> -->
          
          <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd weui-cell_primary">
              <view>用户反馈</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </navigator>
        </view>
      </view>
    </view>

    <view class="weui-panel__hd">其他</view>
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_small-appmsg">
        <view class="option-item weui-cells weui-cells_in-small-appmsg">
          <navigator hidden="{{is_phone_bound===true}}" url="/pages/me/bindphone/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd weui-cell_primary">
              <view>绑定手机</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </navigator>
          <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd weui-cell_primary">
              <view>关于我们</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </navigator>
        </view>
      </view>
    </view>
  </view>
</view>